<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:textAlignment="center"
    tools:context=".Home">

    <buttons.MButton
        android:id="@+id/settingsButton"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:foreground="@drawable/settings"
        android:foregroundGravity="center|fill"
        app:cornerRadius="10dp"
        app:backColor="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowColor="#00000000" />

    <buttons.MButton
        android:id="@+id/playButton"
        android:layout_width="243dp"
        android:layout_height="54dp"
        android:layout_marginTop="412dp"
        android:textAlignment="center"
        app:cornerRadius="50dp"
        app:fontColor="#FFFFFF"
        app:fontSize="30dp"
        app:fontType="@font/rubik_mono_one"
        app:fontWeight="1"
        app:backColor="#F9C80E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowColor="#FF5E99"
        app:shadowRadius="10dp"
        app:text="PLAY" />

    <buttons.ProfileButton
        android:layout_width="92dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        app:backgroundColor="#E03001"
        app:contentImage="@drawable/popompurin"
        app:contentScale="0.7"
        app:frameImage="@drawable/frame2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>